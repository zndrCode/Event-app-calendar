<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 🔝 Top Bar -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="Eventra"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:elevation="2dp"/>

    <!-- 🧭 Main Content Area -->
    <FrameLayout
        android:id="@+id/homeContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textTitle"
        android:layout_above="@id/bottomNav"
        android:background="#FFFFFF">

        <!-- 📄 Empty state text -->
        <TextView
            android:id="@+id/textEmptyState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Events Yet. Press the + to add one"
            android:textColor="#9E9E9E"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </FrameLayout>

    <!-- ➕ Floating Add Button -->
    <ImageButton
        android:id="@+id/fabAdd"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_circle"
        android:src="@drawable/plus_outline"
        android:contentDescription="Add Event"
        android:scaleType="centerInside"
        android:padding="10dp"
        android:backgroundTint="@null" />

    <!-- ⬇️ Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/navBookmarks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home_logo"
                android:tint="#9E9E9E"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bookmark_logo"
                android:tint="#2196F3"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile_setting_logo"
                android:tint="#9E9E9E"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
