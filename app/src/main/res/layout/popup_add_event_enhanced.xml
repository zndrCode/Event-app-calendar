<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back"
                android:tint="#424242"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add Event"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:gravity="center"/>

            <ImageButton
                android:id="@+id/btnSave"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/bg_teal_button"
                android:src="@drawable/ic_done_white"
                android:tint="#FFFFFF"/>
        </LinearLayout>

        <!-- EVENT TITLE CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/card_white_round">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textSize="14sp"
                android:textColor="#757575"/>

            <EditText
                android:id="@+id/etEventName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter event title"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E"
                android:paddingStart="4dp"/>
        </LinearLayout>

        <!-- ALL DAY SWITCH -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:background="@drawable/card_white_round">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="All Day Event"
                android:textSize="16sp"
                android:textColor="#212121"/>

            <Switch
                android:id="@+id/switchAllDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="#00AFA4"
                android:trackTint="#BBDEFB"/>
        </LinearLayout>

        <!-- DATE TIME CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/card_white_round">

            <!-- START -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textSize="14sp"
                android:textColor="#757575"/>

            <LinearLayout
                android:id="@+id/startDateCard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/input_field_white"
                android:padding="10dp"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_calendar"
                    android:tint="#00AFA4"/>

                <TextView
                    android:id="@+id/txtStartDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thu, 20 Nov 2025"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:paddingStart="10dp"/>

                <ImageView
                    android:id="@+id/startTimeIcon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_time"
                    android:tint="#00AFA4"/>

                <TextView
                    android:id="@+id/txtStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01:00 AM"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:paddingStart="10dp"/>
            </LinearLayout>

            <!-- DIVIDER -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="16dp"/>

            <!-- END -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End"
                android:textSize="14sp"
                android:textColor="#757575"/>

            <LinearLayout
                android:id="@+id/endDateCard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/input_field_white"
                android:padding="10dp"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_calendar"
                    android:tint="#00AFA4"/>

                <TextView
                    android:id="@+id/txtEndDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thu, 20 Nov 2025"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:paddingStart="10dp"/>

                <ImageView
                    android:id="@+id/endTimeIcon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_time"
                    android:tint="#00AFA4"/>

                <TextView
                    android:id="@+id/txtEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02:00 AM"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:paddingStart="10dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
