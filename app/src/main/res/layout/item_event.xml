<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Time Column -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingEnd="16dp">

            <!-- All Day Indicator -->
            <TextView
                android:id="@+id/tvAllDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All day"
                android:textSize="12sp"
                android:textColor="#2196F3"
                android:textStyle="bold"
                android:background="@drawable/all_day_bg"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:visibility="gone" />

            <!-- Time for timed events -->
            <LinearLayout
                android:id="@+id/timeContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:00"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />

                <TextView
                    android:id="@+id/tvStartAmPm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AM"
                    android:textSize="12sp"
                    android:textColor="#757575" />

                <View
                    android:id="@+id/timeDivider"
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_marginVertical="4dp"
                    android:background="#E0E0E0" />

                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9:00"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />

                <TextView
                    android:id="@+id/tvEndAmPm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AM"
                    android:textSize="12sp"
                    android:textColor="#757575" />
            </LinearLayout>
        </LinearLayout>

        <!-- Event Details Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Event Title -->
            <TextView
                android:id="@+id/tvEventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Executive team meeting"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Event Location -->
            <TextView
                android:id="@+id/tvEventLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Small meeting room"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Action Buttons - UPDATED SIZE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12px"
                android:gravity="start">

                <ImageButton
                    android:id="@+id/btnEdit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/edit_event"
                    android:background="@android:color/transparent"
                    android:contentDescription="Edit"
                    android:padding="2dp"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/trash_event"
                    android:background="@android:color/transparent"
                    android:contentDescription="Delete"
                    android:padding="2dp"
                    android:scaleType="centerInside"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Color Indicator Strip -->
        <View
            android:id="@+id/colorIndicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#2196F3"
            android:layout_marginStart="12dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>